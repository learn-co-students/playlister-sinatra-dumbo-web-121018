<h1>Create a New Song</h1>
<form action="/songs" method="post">
  <label>Name of Song:</label>
  <input type="text" name="song[name]" id="Name">

<br>
  <label>Choose its genre(s):</label>
  <ul>
  <%@genres.each do |genre|%>
    <p><input type="checkbox" name="genre[<%=genre.id%>]" value="<%=genre.name%>"><%=genre.name%></p>
  <%end%>
  </ul>

  <label>Select an Existing Artist:</label>
  <select name="artist[id]">
    <%@artists.each do |artist|%>
      <option value="<%=artist.id%>"><%=artist.name%></option>
    <%end%>
    </select>
  Or Create a New Artist:
  <input type="text" name="name">

  <input type="submit">
</form>
