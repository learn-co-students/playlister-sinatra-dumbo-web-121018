<h1> <%= @song.name %></h1>
<h4> Artist: </h4>
<p><a href="/artists/<%= @song.artist.slug %>" id='artist_name'><%= @song.artist.name %></a></p>
<h4> Genres: </h4>
<ul>
<%  @song.genres.each do |genre|  %>
<li name='<%= genre.name %>'><a href="/genres/<%= genre.slug %>"><%= genre.name.capitalize %></a></li>
<% end %>
</ul>
